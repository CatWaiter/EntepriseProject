@model IEnumerable<EnterpriseProject.Data.User>
@{
    ViewData["Title"] = "Admin Tools";
}
<h2>Admin Tools - User Management</h2>

<p>Total Users: @ViewData["UserCount"]</p>
<p>Total Listings: @ViewData["ListingCount"]</p>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>
                <a href="@Url.Action("EditUser", "AdminTool", new { id = user.UserId })">Edit</a>
                <a href="@Url.Action("DeleteUser", "AdminTool", new { id = user.UserId })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>


