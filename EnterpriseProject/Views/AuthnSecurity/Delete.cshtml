@model EnterpriseProject.Data.SavedListing

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SavedListing</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SavedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SavedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Listing)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Listing.ListingId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SavedListingId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ViewSavedListings">Back to List</a>
    </form>
</div>
