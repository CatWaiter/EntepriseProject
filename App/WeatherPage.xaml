<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnterpriseMarketplace.WeatherPage"
             Title="Weather">

  <ScrollView>
    <StackLayout Padding="20" Spacing="15" HorizontalOptions="FillAndExpand" VerticalOptions="Start">
      <Label Text="Weather Information" FontSize="Medium" HorizontalOptions="Center"/>
      <Label Text="{Binding Temperature}" FontSize="Large" HorizontalOptions="Center" />
      <Label Text="{Binding Description}" FontSize="Small" HorizontalOptions="Center" />
      <Label Text="{Binding Location}" FontSize="Small" HorizontalOptions="Center" />
      <Button Text="Refresh" Clicked="OnRefreshButtonClicked" HorizontalOptions="Center" Style="{StaticResource ButtonStyle}" />
    </StackLayout>
  </ScrollView>
</ContentPage>