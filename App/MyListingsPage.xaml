<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnterpriseMarketplace.MyListingsPage"
             Title="My Listings">

    <StackLayout Padding="10">
        <Button Text="Create a Listing" Clicked="OnCreateListingButtonClicked"/>
        <CollectionView x:Name="MyListingsCollectionView" ItemsSource="{Binding}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Margin="10" Padding="10" BackgroundColor="LightGray">
                        <Label Text="{Binding Title}" FontSize="Medium" />
                        <Label Text="{Binding Description}" FontSize="Small" />
                        <Label Text="{Binding Price, StringFormat='{}{0:C}'}" FontSize="Small" />
                        <Label Text="{Binding Location}" FontSize="Small" />
                        <Button Text="Edit" Clicked="OnEditButtonClicked" />
                        <Button Text="Delete" Clicked="OnRemoveButtonClicked" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>