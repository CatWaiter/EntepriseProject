<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnterpriseMarketplace.SavedListingsPage"
             Title="Saved Listings">

    <StackLayout Padding="10">

        <SearchBar Placeholder="Search Saved Listings"
                   TextChanged="OnSearchTextChanged"
                   VerticalOptions="Start" />

        <CollectionView x:Name="SavedListingsCollectionView"
                        SelectionMode="Single"
                        ItemsSource="{Binding SavedListings}">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" BackgroundColor="LightGray" Margin="5">
                        <Label Text="{Binding Listing.Title}" FontSize="Medium" FontAttributes="Bold"/>
                        <Label Text="{Binding Listing.Location}" FontSize="Small"/>
                        <Label Text="{Binding Listing.Price, StringFormat='{}{0:C}'}" FontSize="Small"/>
                        <Button Text="Remove" Clicked="OnRemoveButtonClicked"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </StackLayout>
</ContentPage>