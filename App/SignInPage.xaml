<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnterpriseMarketplace.SignInPage"
             Title="Sign In">

    <StackLayout Padding="10">
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
            <Button Text="Sign In" Clicked="OnSignInButtonClicked" WidthRequest="100" x:Name="SignInButton" Style="{StaticResource ButtonStyle}" />
            <Button Text="Register" Clicked="OnRegisterButtonClicked" WidthRequest="100" Style="{StaticResource ButtonStyle}" />
        </StackLayout>
    </StackLayout>

</ContentPage>