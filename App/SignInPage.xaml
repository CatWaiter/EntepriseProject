<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnterpriseMarketplace.SignInPage">
  <StackLayout Padding="20" Spacing="15">
    <Label Text="Sign In" FontSize="Large" HorizontalOptions="Center"/>
    <Entry Placeholder="Email" Keyboard="Email" />
    <Entry Placeholder="Password" IsPassword="True" />
    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
      <Button Text="Sign In" WidthRequest="100"/>
      <Button Text="Register" WidthRequest="100"/>
    </StackLayout>
  </StackLayout>
</ContentPage>